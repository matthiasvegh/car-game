
.gitignore

CXX = g++
LD = $(CXX)

CPP_FLAGS += -std=c++11
CPP_FLAGS += -Wall -Wextra
CPP_FLAGS += -g

SOURCE_DIR = $(TUP_CWD)/src

INCLUDE_DIRS += -I$(SOURCE_DIR)

LIBS += -lIrrlicht
LIBS += -lglut
LIBS += -lGL

!cxx = |> ^ CXX %f^ $(CXX) $(CPP_FLAGS) $(INCLUDE_DIRS) -c %f -o %o |> %B.o
!linker = |> ^ LD %o^ $(LD) $(LD_FLAGS) %f $(LIBS) -o %o |>

